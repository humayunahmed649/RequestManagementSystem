<table id="example1" class="table table-striped table-bordered table-hover" style="width: 100%">
    <thead>
        <tr class="bg-info">
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequisitionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requisition.RequisitionNumber)
            </th>

            <th class="text-center">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
    @{
        var sl = 0;
        if (Model.Count() != 0)
        {
            sl++;
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @sl
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequisitionId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Requisition.RequisitionNumber)
                    </td>

                    <td class="text-right">
                        @Html.ActionLink("Check-Out", "CheckOut", new { id = item.Id },new {@class="btn btn-success"})
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="text-center text-danger" colspan="6"> Data Not Found!</td>
            </tr>
        }
    }
    </tbody>
    <tfoot>
        <tr class="badge-secondary text-white">
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequisitionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requisition.RequisitionNumber)
            </th>

            <th class="text-center">
                Action
            </th>
        </tr>
    </tfoot>
</table>
