@model IEnumerable<RMS.App.ViewModels.VehicleTypeViewModel>

@{
    ViewBag.Title = "Vehicle Type List";
}
@section styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.semanticui.min.css" rel="stylesheet" />
}
<div class="container">
    <h2>Vehicle Type List</h2>
    <hr/>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info">
            @Html.Raw(TempData["msg"])
        </div>
    }
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 col-sm-4 col-4 header-top-left no-padding">
                <p>
                    @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-success"})
                </p>
            </div>

            @*<div class="col-lg-8 col-sm-8 col-8 text-right no-padding">
                <p>
                    @using (Html.BeginForm("Index", "VehicleTypes", FormMethod.Get))
                    {
                        <b>Search by (Type) </b>
                        @Html.TextBox("searchText")
                        <input type="submit" value="Search" />
                    }
                </p>
            </div>*@
        </div>
    </div>
    <br/>
    <table id="example" class="table table-striped table-bordered table-hover" style="width: 100%">
        <thead>
        <tr class="bg-info">
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                Action
            </th>
        </tr>
        </thead>
        <tbody>
        @{
            var sl = 0;
            if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {
                    sl++;
                    <tr>
                        <td>
                            @sl
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-right">
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-warning btn-sm"})
                            @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-primary btn-sm"})
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "btn btn-danger btn-sm"})
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center text-danger" colspan="3"> Data Not Found!</td>
                </tr>
            }
        }
        </tbody>
        <tfoot>
        <tr class="bg-secondary">
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                Action
            </th>
        </tr>
        </tfoot>

    </table>
</div>

@section scripts
{

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}