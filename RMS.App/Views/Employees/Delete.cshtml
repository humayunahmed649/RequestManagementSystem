@model RMS.App.ViewModels.EmployeeViewModel

@{
    ViewBag.Title = "Delete Employee";
}

<h2>Delete Employee</h2>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<hr/>

<div class="container">
    <div class="row">

        <div class="col-md-10">
            <h3>Personal Information :</h3>
            <br />
            <table class="table table-bordered table-info table-striped" style="width: 100%">
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.FullName)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.FullName)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.EmployeeTypeId)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.EmployeeType.Type)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.ContactNo)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.Email)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.NID)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.NID)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.DrivingLicence)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.DrivingLicence)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.BloodGroup)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.BloodGroup)
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-2">
            <br /><br />
            <img src="~/Content/img/EmpImg.gif" style="width: 150px; height: 180px !important; border: 1px solid #808080" />
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Office Information :</h3>
            <br />
            <table class="table table-bordered table-info table-striped">
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.OrganizationId)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.Organization.Name)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.DepartmentId)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.Department.Name)
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2-custom" style="width: 20%">
                        @Html.DisplayNameFor(model => model.DesignationId)
                    </td>
                    <td style="width: 80%">
                        @Html.DisplayFor(model => model.Designation.Title)
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row" style="margin: 0 4px">
        <div class="col-md-12">
            <h3>Address :</h3>
            <br />
            <div class="row border table-info">
                <br />
                <div class="col-md-6">
                    <div class="row">

                        <div class="col-md-4 border col-md-2-custom">
                            <br /><br /><br />
                            @Html.DisplayName("Present Address")
                        </div>
                        <div class="col-md-8 border">
                            <br />
                            @foreach (var item in Model.Addresses)
                            {
                                if (item.AddressType == "Present Address")
                                {
                                    @Html.DisplayFor(modelItem => item.AddressLine1)<br />
                                    @Html.DisplayFor(modelItem => item.AddressLine2)<br />
                                    @Html.DisplayFor(modelItem => item.PostOffice)<br />
                                    @Html.DisplayFor(modelItem => item.PostCode)<br />
                                    @Html.DisplayFor(modelItem => item.Division.Name)<br />
                                    @Html.DisplayFor(modelItem => item.District.Name)<br />
                                    @Html.DisplayFor(modelItem => item.Upazila.Name)<br /><br />
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <br />
                        <div class="col-md-4 border col-md-2-custom">
                            <br /><br /><br />
                            @Html.DisplayName("Permanent Address")
                        </div>
                        <div class="col-md-8 border">
                            <br />
                            @foreach (var item in Model.Addresses)
                            {
                                if (item.AddressType == "Permanent Address")
                                {
                                    @Html.DisplayFor(modelItem => item.AddressLine1)<br />
                                    @Html.DisplayFor(modelItem => item.AddressLine2)<br />
                                    @Html.DisplayFor(modelItem => item.PostOffice)<br />
                                    @Html.DisplayFor(modelItem => item.PostCode)<br />
                                    @Html.DisplayFor(modelItem => item.Division.Name)<br />
                                    @Html.DisplayFor(modelItem => item.District.Name)<br />
                                    @Html.DisplayFor(modelItem => item.Upazila.Name)<br /><br />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<br/>
<div >
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="padding: 0 15px">
            <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;
            @Html.ActionLink("Back to List", "Index",null,new {@class="btn btn-info"})
        </div>
    }
</div><br/>
