@model IEnumerable<RMS.App.ViewModels.RequisitionViewModel>

@{
    ViewBag.Title = "All Requisitions";

}
@section styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.semanticui.min.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css" rel="stylesheet" />

}


<div class="container">
    <h2>All Requisitions</h2>
    <hr />

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info">
            @Html.Raw(TempData["msg"])
        </div>
    }
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 col-sm-4 col-4 header-top-left no-padding">
                <p>
                    @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-success"})
                </p>
            </div>

        </div>
    </div>
    <br/>

        <table id="example1" class="table table-striped table-bordered table-hover dt-responsive nowrap" style="width: 100%">
            <thead>
            <tr class="bg-info">
                <th>
                    SL
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequisitionNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromPlace)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DestinationPlace)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDateTime)
                </th>
                <th>
                    Action
                </th>
            </tr>
            </thead>
            <tbody>
            @{
                var sl = 0;
                if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                        sl++;
                        <tr>
                            <td>
                                @sl
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequisitionNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.Designation.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FromPlace)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DestinationPlace)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDateTime)
                            </td>

                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })*@
                                @Html.ActionLink("Feedback", "Feedback", new { requisitionId = item.Id },new {@class="btn btn-outline-success"})
                             </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-center text-danger" colspan="9"> Data Not Found!</td>
                    </tr>
                }
            }
            </tbody>
            <tfoot>
            <tr class="bg-secondary text-white">
                <th>
                    SL
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequisitionNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromPlace)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DestinationPlace)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDateTime)
                </th>
                <th>
                    Action
                </th>
            </tr>
            </tfoot>
        </table>

</div>


@section scripts
{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example1').DataTable();
        });
    </script>
}
